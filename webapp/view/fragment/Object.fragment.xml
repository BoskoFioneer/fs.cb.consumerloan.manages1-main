<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:forms="sap.ui.layout.form" xmlns="sap.m" xmlns:u="sap.ui.unified">
	<!-- Extends the Balance key Figures Container fragment -->
<core:ExtensionPoint name="ExtObject">
		<forms:FormContainer id="ObjectDetailsFormContainer" title="{i18n>xtit.capitalObject}">
			<forms:formElements>
				<forms:FormElement id="objectCapitalFormElement">
					<forms:label>
						<Label id="disbursedModelLabel" text="{i18n>xfld.disbursedModel}" labelFor="disbursedModelField"></Label>
					</forms:label>
					<forms:fields>
						<Text id="disbursedModelField"
							text="{parts:[{path:'ObjectCptlAmt/Model'}, {path:'DsbursdCptlAmt/CurrencyCode'}]}"/>
					</forms:fields>
				</forms:FormElement>
				<forms:FormElement id="objectIdCapitalFormElement">
					<forms:label>
						<Label id="objectIdCapitalLabel" text="{i18n>xfld.objectId}" labelFor="objectIdCapitalField"></Label>
					</forms:label>
					<forms:fields>
						<Text id="objectIdCapitalField"
							text="700000000000004"/>
					</forms:fields>
				</forms:FormElement>
                <forms:FormElement id="objectDescCapitalFormElement">
					<forms:label>
						<Label id="objectDescCapitalLabel" text="{i18n>xfld.objectDesc}" labelFor="objectDescCapitalField"></Label>
					</forms:label>
					<forms:fields>
						<Text id="objectDescCapitalField"
							text="My BMW i3"/>
					</forms:fields>
				</forms:FormElement>
			</forms:formElements>
		</forms:FormContainer>
		<forms:FormContainer id="interestChargeAmountFormContainer" title="{i18n>xtit.capitalObjectDetails}">
			<forms:formElements>
				<forms:FormElement id="agreedMileageFormElement">
					<forms:label>
						<Label id="agreedMileageLabel" text="{i18n>xfld.agreedMileage}" labelFor="agreedMileageField"></Label>
					</forms:label>
					<forms:fields>
						<Text id="agreedMileageField"
							text="150.000 km per year"/>
					</forms:fields>
				</forms:FormElement>
				<forms:FormElement id="vinNumberFormElement">
					<forms:label>
						<Label id="vinNumberLabel" text="{i18n>xfld.vinNumber}" labelFor="vinNumberField"></Label>
					</forms:label>
					<forms:fields>
						<Text id="vinNumberField"
							text="WBA3K5C50EKT33030"/>
					</forms:fields>
				</forms:FormElement>
			</forms:formElements>
		</forms:FormContainer>
	</core:ExtensionPoint>
</core:FragmentDefinition>