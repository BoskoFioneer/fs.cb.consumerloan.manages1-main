									<Text text="Finance Leasing" />
								</cells>
								
							</ColumnListItem>
						</items>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier title="{AccountingPrinciple}" text="IFRS" />
									<Text text="FL" />
									<Text text="Finance Leasing" />
								</cells>
							</ColumnListItem>
						</items>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier title="{AccountingPrinciple}" text="Tax" />
									<Text text="FL" />
									<Text text="Finance Leasing" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
            </l:BlockLayout>
	</l:VerticalLayout>
</mvc:View>