		<l:VerticalLayout id="containerLayout" width="100%">
		<l:BlockLayout id="BlockLayout" background="{/selectedBackground}">
    <l:BlockLayoutRow accentCells="Accent3">
				<l:BlockLayoutCell id="Accent3">
					<Table
						id="idProductsTable"
						inset="false"
						
						>
						<columns>
							<Column width="12em"
                                    hAlign="Left">
								<Text text="Account Principle" />
							</Column>
							
							<Column hAlign="Center">
								<Text text="Classification Info" />
							</Column>
							<Column hAlign="Right">
								<Text text="Classification Details" />
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier title="{AccountingPrinciple}" text="US GAAP" />
